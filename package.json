{
  "name": "viewability.js",
  "version": "0.0.1",
  "description": "Viewability tracker used to measure whether a DOM elements is actually seen by users",
  "source": "src/index.ts",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "author": "Andrea Fassina <fasenderos@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/fasenderos/viewability.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:fasenderos/viewability.js.git"
  },
  "bugs": {
    "url": "https://github.com/fasenderos/viewability.js/issues"
  },
  "scripts": {
    "clean": "rm -rf .parcel-cache && rm -rf dist",
    "lint": "biome check ./src",
    "lint:fix": "biome check --write ./src",
    "watch": "npm run clean && parcel watch",
    "build": "npm run clean && parcel build",
    "start": "npm run build && parcel src/index.html",
    "release": "release-it"
  },
  "targets": {
    "main": {
      "optimize": true
    },
    "module": {
      "optimize": true
    }
  },
  "keywords": [
    "viewability",
    "viewability tracker",
    "iab viewability",
    "iab standard viewability"
  ],
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@parcel/packager-ts": "2.13.3",
    "@parcel/transformer-typescript-types": "2.13.3",
    "@release-it/conventional-changelog": "^10.0.0",
    "@tailwindcss/postcss": "^4.0.9",
    "parcel": "^2.13.3",
    "postcss": "^8.2.1",
    "release-it": "^18.1.2",
    "tailwindcss": "^4.0.9",
    "typescript": ">=3.0.0"
  },
  "files": [
    "dist",
    "AUTHORS",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ]
}
